{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Reset",
      "type": "shell",
      "command": "openocd",
      "args": [
        "-f",
        "interface/raspberrypi-swd.cfg",
        "-f",
        "target/rp2040.cfg",
        "-c",
        "adapter speed 5000",
        "-c",
        "reset"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Upload",
      "type": "shell",
      "command": "openocd",
      "args": [
        "-f",
        "interface/raspberrypi-swd.cfg",
        "-f",
        "target/rp2040.cfg",
        "-c",
        "adapter speed 5000",
        "-c",
        "program ${workspaceFolder}/src/${fileDirnameBasename}/${fileDirnameBasename}.elf verify reset"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/src/${fileDirnameBasename}/"
      },
      "command": "make",
      "args": [
        "-j4"
      ],
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Debug",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/src/${fileDirnameBasename}/"
      },
      "command": "gdb-multiarch",
      "args": [
        "${fileDirnameBasename}.elf"
      ],
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build & Upload & Debug",
      "dependsOn": [
        "Build",
        "Upload",
        "Debug"
      ],
      "problemMatcher": []
    }
  ]
}
